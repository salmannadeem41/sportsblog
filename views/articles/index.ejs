    <div class="container">
    
      <h1 class="mb-4">Blog Page</h1>
      <a href="/articles/new" class="btn btn-success mb-4">New Blog</a>
    
      <!-- <div class="card mb-3"> -->
        <!-- <img src="\images\img1.png" style="height: 300px ; width: 500px;" class="card-img-top" alt="..." /> -->
        <% articles.forEach(article => { %>
          <div class="row">
            <div class=" col-sm">
          <div class="card mb-3" >
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div>  <h5 class="card-title">Author: <b><%= article.author %></b></h5></div>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>

         
          <div class="card-text mb-4" > <%=article.description.substring(0, 200) + " ..."%></div>
          <!-- <div class="card-text mb-2"><%= article.description %></div> -->
          <a href="/articles/<%= article.slug %>" class="btn btn-primary"
            >Show Details</a
          >
          <a href="/articles/edit/<%= article.id %>" class="btn btn-info"
            >Edit Details</a
          >
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
        </div>
     </div>
    </div>
          <% }) %>
        <!-- </div>
      </div> -->

        
    <!-- Bootstrap core JS-->
